{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:vue/vue3-recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "vue/multi-word-component-names": "off",
    "vue/no-v-html": "warn",
    "no-console": "warn",
    "no-debugger": "warn",
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "vue/require-default-prop": "off",
    "vue/require-prop-types": "warn"
  },
  "ignorePatterns": [
    "node_modules/",
    "vendor/",
    "public/build/",
    "dist/"
  ]
}
